<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<GridPane fx:controller="ru.nsu.ccfit.chirikhin.chat.client.ClientViewController"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <TextField fx:id="inputField" GridPane.columnIndex="0" GridPane.rowIndex="1" onKeyPressed="#onKeyPressed"/>

    <TextArea fx:id="chatText" GridPane.columnIndex="0" GridPane.rowIndex="0" editable="false" mouseTransparent="true" focusTraversable="false"/>

</GridPane>